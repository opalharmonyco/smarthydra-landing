#!/bin/bash

# SSH Setup for SmartHydra Landing Page Repository
# This command sets up the correct SSH key for pushing to the repository

echo "ğŸ”‘ Setting up SSH for SmartHydra Landing Page Repository..."

# Check if we're in the right directory
if [ ! -f "package.json" ] || [ ! -d ".git" ]; then
    echo "âŒ Error: Not in the SmartHydra landing page repository directory"
    echo "Please run this command from the smarthydra-landing-page directory"
    exit 1
fi

# Start SSH agent
echo "ğŸš€ Starting SSH agent..."
eval "$(ssh-agent -s)"

# Add the correct SSH key
echo "ğŸ” Adding SSH key for opalharmonyco account..."
ssh-add ~/.ssh/id_ed25519_opal

# Verify the key was added
echo "âœ… Verifying SSH key..."
ssh-add -l

# Test GitHub connection
echo "ğŸŒ Testing GitHub connection..."
ssh -T git@github.com

# Check and set correct remote URL
echo "ğŸ”— Checking git remote configuration..."
CURRENT_REMOTE=$(git remote get-url origin)
EXPECTED_REMOTE="git@github.com:opalharmonyco/smarthydra-landing.git"

if [ "$CURRENT_REMOTE" != "$EXPECTED_REMOTE" ]; then
    echo "ğŸ”§ Setting correct remote URL..."
    git remote set-url origin "$EXPECTED_REMOTE"
    echo "âœ… Remote URL updated to: $EXPECTED_REMOTE"
else
    echo "âœ… Remote URL is already correct: $CURRENT_REMOTE"
fi

echo ""
echo "ğŸ‰ SSH setup complete! You can now push to the repository."
echo ""
echo "ğŸ“‹ Quick reference:"
echo "   Repository: opalharmonyco/smarthydra-landing"
echo "   SSH Key: ~/.ssh/id_ed25519_opal"
echo "   Account: opalharmonyco@gmail.com"
echo ""
echo "ğŸ’¡ To push changes: git push origin main"
